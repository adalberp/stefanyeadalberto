<%= display_when_present @cerimonies do %>
  <table class="grid">
    <% @cerimonies.each do |cerimony| %>
      <%= content_tag_for :tr, cerimony, :class => cycle(:odd, :even) do %>
        <td>
          <%= link_to cerimony.local, [:edit, :admin, cerimony] %>
        </td>
        <td>
          <%= cerimony.address %>
        </td>
        <td style="width:15%; text-align:right;">
          <%= link_to_edit [:edit, :admin, cerimony] %>
          <%= link_to_destroy [:admin, cerimony] %>
        </td>
      <% end %>
    <% end %>
  </table>
<% end %>

<hr class="thick" />

<div class="bar">  
  <div class="right">
    <%= link_to 'Novo local', new_admin_cerimony_path, :class => "button" %>
  </div>
</div>